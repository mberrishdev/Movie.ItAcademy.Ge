
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
}

<h2>Movie Details</h2>

<div class="col-sm-10 col-lg-10 col-md-10">
    <div class="thumbnail">
        <img src="@Model.BannerUrl" width="200px" height="350px" alt="">
        <div class="caption">
            <h3>
                <a>@Model.Name</a>
            </h3>
            <h5>
                <p>Gener: @Model.Gener</p>
                <p>Director: @Model.Director</p>
                <p>IMDB Reiting: @Model.IMDBReiting</p>
                <p>Premier Time: @Model.PremierTime</p>
                <p>Description: @Model.Description</p>
                <p>Price: @Model.Price @Model.Currency</p>
                <p>Status: @Model.Status</p>
            </h5>
                @if (Model.Status == "Active")
                {
                    <form method="post" asp-action="InActivateMovie" asp-controller="Movie"asp-route-id="@Model.Id">
                            <button class="btn btn-info">InActive Movie</button>
                    </form>
                }
                else if (Model.Status != "Active")
                {
                    <form method="post" asp-action="ActivateMovie" asp-controller="Movie" asp-route-id="@Model.Id">
                            <button class="btn btn-info">Activate Movie</button>
                    </form>
                }
                <form method="post" asp-action="DeleteMovie" asp-controller="Movie" asp-route-id="@Model.Id">
                            <button class="btn btn-info">Delete Movie</button>
                </form>
        </div>
    </div>
    <div>
</div>
</div>
